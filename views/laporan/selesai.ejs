<%- include ../layouts/header.ejs %>
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    
 
    <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title"><div class="box-title">Selesai</div></h3>
            </div>
            <div class="box-body data-table">
            <table class="table table-bordered">
    <!--
        Using FOREACH LOOP for the users array
        
        myArray.forEach(function(el, index) {
            // el - current element, i - index
        });
    -->
    <% if (data) { %>
    <% data.forEach(function(user){ %>
                  <tr>
                  <th>
                    <a href="/laporan/<%= user._id %>" class="text-center"><p><%= user.judul %></p></a>
                  </th>
                  <th>
                    <p><%= user.kategori %></p>
                  </th>
                  <th>
                    <p><%= user.ruang %></p>
                  </th>                         
                  <th>
                    <a href="/hapuslaporan/<%= user._id %>" class="text-center"><p>Hapus</p></a>
                  </th>
                  </tr>
              <% }) %>
             <% } %>
            </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>