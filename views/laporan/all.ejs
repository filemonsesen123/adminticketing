<%- include ../layouts/header.ejs %>
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    
<% if (status == "SuperAdmin") { %>
        <li><a href="\admin"><i class="fa fa-link"></i> <span>Admin</span></a></li>
      <%}%>
      </ul>
    </section>
    </aside>
<div class="content-wrapper">
    <section class="content-header">
      <h1>
        <%= title %>
      </h1>
    </section>
 <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title"><div class="box-title"><%= subtitle %></div></h3>
            </div>
            <div class="box-body data-table">
            <table id="example" class="display table-bordered">
              <thead>
                  <tr>
                  <th>
                    Judul
                  </th>                        
                  <th>
                    Kategori
                  </th>                        
                  <th>
                    Lokasi
                  </th>                        
                  <th>
                    Waktu
                  </th>                        
                  <th>
                    Status
                  </th>                        
                  <th>
                    Isi
                  </th>                        
                  <th>
                    Gambar
                  </th>                        
                  <th>
                    Action
                  </th>
                  </tr>
              </thead>              
    <!--
        Using FOREACH LOOP for the users array
        
        myArray.forEach(function(el, index) {
            // el - current element, i - index
        });
    -->
              <tbody>
    <% if (data) { %>
    <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                  <td>
                    <%= data[i].judul %>
                  </td>                        
                  <td>
                    <%= data[i].kategori %>
                  </td>                        
                  <td>
                    <%= data[i].lokasi %>
                  </td>                        
                  <td>
                    <%= data[i].date.substring(4,16) %>
                  </td>                        
                  <td>
                    <%= data[i].status %>
                  </td>                        
                  <td>
                    <p class="text-center"><%= data[i].isipengaduan %></p>
                  </td>                        
                  <td>
                    <p class="text-center"><img src="<%= data[i].photo %>" alt="User Image" style="width: 200px; height:200px;border-radius:10px;"></p>
                  </td>                        
                  <td>
                    <a href="/laporan/<%= data[i].author_id %>" class="text-center"><p style="color: #EF3E5A;">Show</a>
                  </td>
                  </tr>
              <% } %>
             <% } %>
             </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>