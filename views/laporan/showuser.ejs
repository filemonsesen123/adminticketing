      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3><div class="box-title"><%= name %></div></h3>
            </div>
            <div class="box-body">
                          <p><%= status %></p>
                          <p><%= age %></p>
                          <p><%= email %></p>
                      </div>
                        <div class="box-footer">
                            <a href="\hapususer\<%= id %>" class="btn btn-default btn-flat">Hapus</a>
                            <a href="\gantiadmin\<%= id %>" class="btn btn-default btn-flat">Ubah</a>
