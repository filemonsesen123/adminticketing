<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    
<% if (status == "SuperAdmin") { %>
        <li><a href="\admin"><i class="fa fa-link"></i> <span>Admin</span></a></li>
      <%}%>
      </ul>
    </section>
  </aside>
     <div class="content-wrapper">
    <section class="content-header">
      <h1>
        <%= title %>
      </h1>
    </section>
 <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title"><div class="box-title"><%= subtitle %></div></h3><br>
              <a href="/registeradmin" class="pull-left btn btn-primary"><i class="fa fa-plus">Add Admin</i></a>
            </div>
            <div class="box-body data-table">
            <table class="table table-bordered">
                  <tr>
                  <th>
                    <p class="text-center">Nama</p>
                  </th>                        
                  <th>
                    <p class="text-center">Status</p>
                  </th>                        
                  <th>
                    <p class="text-center">Action</p>
                  </th>                        
                  <th>
                    <p class="text-center">Action</p>
                  </th>
                  </tr>
    <!--
        Using FOREACH LOOP for the users array
        
        myArray.forEach(function(el, index) {
            // el - current element, i - index
        });
    -->
    <% if (data) { %>
    <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                  <td>
                    <p class="text-center"><%= data[i].username %></p>
                  </td>                        
                  <td>
                    <p class="text-center"><%= data[i].status %></p>
                  </td>                        
                  <td>
                    <a href="/editadmin/<%= data[i]._id %>" class="text-center"><p>Edit</p></a>
                  </td>
                  <td>
                    <a href="/deleteadmin/<%= data[i]._id %>" class="text-center"><p>Delete</p></a>
                  </td>
                  </tr>
              <% } %>
             <% } %>
            </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
