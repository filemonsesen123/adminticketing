<%- include ../layouts/header.ejs %>
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    
 
      <div class="content-wrapper">
    <section class="content-header">
      <h1>
        <%= title %>
        <small>Control Panel</small>
      </h1>
    </section>
<section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title"><div class="box-title"><%= subtitle%></div></h3>
            </div>
            <div class="box-body data-table">
            <table class="table table-bordered">
                  <tr>
                  <th>
                    <p class="text-center">Nama</p>
                  </th>                        
                  <th>
                    <p class="text-center">Email</p>
                  </th>                        
                  <th>
                    <p class="text-center">Jabatan</p>
                  </th>                        
                  <th>
                    <p class="text-center">Password</p>
                  </th>                        
                  <th>
                    <p class="text-center">Action</p>
                  </th>
                  </tr>
    <!--
        Using FOREACH LOOP for the users array
        
        myArray.forEach(function(el, index) {
            // el - current element, i - index
        });
    -->
    <% if (data) { %>
    <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                  <td>
                    <p class="text-center"><%= data[i].judul %></p>
                  </td>                        
                  <td>
                    <p class="text-center"><%= data[i].kategori %></p>
                  </td>                        
                  <td>
                    <p class="text-center"><%= data[i].lokasi %></p>
                  </td>                        
                  <td>
                    <p class="text-center"><%= data[i].status %></p>
                  </td>                        
                  <td>
                    <a href="/laporan/<%= data[i].author_id %>" class="text-center"><p>Edit</p></a>
                  </td>
                  </tr>
              <% } %>
             <% } %>
            </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>